<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.EboardTestMapper">
    
    <resultMap type="com.ruoyi.system.domain.EboardTest" id="EboardTestResult">
        <result property="testId"    column="test_id"    />
        <result property="testName"    column="test_name"    />
        <result property="testContent"    column="test_content"    />
        <result property="testAnswer"    column="test_answer"    />
    </resultMap>

    <sql id="selectEboardTestVo">
        select test_id, test_name, test_content, test_answer from eboard_test
    </sql>

    <select id="selectEboardTestList" parameterType="EboardTest" resultMap="EboardTestResult">
        <include refid="selectEboardTestVo"/>
        <where>  
            <if test="testName != null  and testName != ''"> and test_name like concat('%', #{testName}, '%')</if>
            <if test="testContent != null  and testContent != ''"> and test_content = #{testContent}</if>
            <if test="testAnswer != null  and testAnswer != ''"> and test_answer = #{testAnswer}</if>
        </where>
    </select>
    
    <select id="selectEboardTestByTestId" parameterType="Long" resultMap="EboardTestResult">
        <include refid="selectEboardTestVo"/>
        where test_id = #{testId}
    </select>
        
    <insert id="insertEboardTest" parameterType="EboardTest" useGeneratedKeys="true" keyProperty="testId">
        insert into eboard_test
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="testName != null">test_name,</if>
            <if test="testContent != null">test_content,</if>
            <if test="testAnswer != null">test_answer,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="testName != null">#{testName},</if>
            <if test="testContent != null">#{testContent},</if>
            <if test="testAnswer != null">#{testAnswer},</if>
         </trim>
    </insert>

    <update id="updateEboardTest" parameterType="EboardTest">
        update eboard_test
        <trim prefix="SET" suffixOverrides=",">
            <if test="testName != null">test_name = #{testName},</if>
            <if test="testContent != null">test_content = #{testContent},</if>
            <if test="testAnswer != null">test_answer = #{testAnswer},</if>
        </trim>
        where test_id = #{testId}
    </update>

    <delete id="deleteEboardTestByTestId" parameterType="Long">
        delete from eboard_test where test_id = #{testId}
    </delete>

    <delete id="deleteEboardTestByTestIds" parameterType="String">
        delete from eboard_test where test_id in 
        <foreach item="testId" collection="array" open="(" separator="," close=")">
            #{testId}
        </foreach>
    </delete>

    <select id="queryByStoryId" resultMap="EboardTestResult">
        select
            eboard_test.*
        from
            eboard_story_test_relation
            inner join eboard_test on eboard_story_test_relation.test_id = eboard_test.test_id
        where
            eboard_story_test_relation.story_id = #{storyId}
    </select>

</mapper>