<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.EboardStoryRecordsMapper">
    
    <resultMap type="EboardStoryRecords" id="EboardStoryRecordsResult">
        <result property="id"    column="id"    />
        <result property="storyId"    column="story_id"    />
        <result property="userId"    column="user_id"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectEboardStoryRecordsVo">
        select id, story_id, user_id, create_time from eboard_story_records
    </sql>

    <select id="selectEboardStoryRecordsList" parameterType="EboardStoryRecords" resultMap="EboardStoryRecordsResult">
        <include refid="selectEboardStoryRecordsVo"/>
        <where>  
            <if test="storyId != null "> and story_id = #{storyId}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
        </where>
    </select>
    
    <select id="selectEboardStoryRecordsById" parameterType="Long" resultMap="EboardStoryRecordsResult">
        <include refid="selectEboardStoryRecordsVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertEboardStoryRecords" parameterType="EboardStoryRecords">
        insert into eboard_story_records
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="storyId != null">story_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="storyId != null">#{storyId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateEboardStoryRecords" parameterType="EboardStoryRecords">
        update eboard_story_records
        <trim prefix="SET" suffixOverrides=",">
            <if test="storyId != null">story_id = #{storyId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteEboardStoryRecordsById" parameterType="Long">
        delete from eboard_story_records where id = #{id}
    </delete>

    <delete id="deleteEboardStoryRecordsByIds" parameterType="String">
        delete from eboard_story_records where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>