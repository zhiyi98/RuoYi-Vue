<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.EboardCardStoryRelationMapper">
    
    <resultMap type="EboardCardStoryRelation" id="EboardCardStoryRelationResult">
        <result property="id"    column="id"    />
        <result property="cardId"    column="card_id"    />
        <result property="storyId"    column="story_id"    />
    </resultMap>

    <sql id="selectEboardCardStoryRelationVo">
        select id, card_id, story_id from eboard_card_story_relation
    </sql>

    <select id="selectEboardCardStoryRelationList" parameterType="EboardCardStoryRelation" resultMap="EboardCardStoryRelationResult">
        <include refid="selectEboardCardStoryRelationVo"/>
        <where>  
            <if test="cardId != null "> and card_id = #{cardId}</if>
            <if test="storyId != null "> and story_id = #{storyId}</if>
        </where>
    </select>
    
    <select id="selectEboardCardStoryRelationById" parameterType="Long" resultMap="EboardCardStoryRelationResult">
        <include refid="selectEboardCardStoryRelationVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertEboardCardStoryRelation" parameterType="EboardCardStoryRelation">
        insert into eboard_card_story_relation
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="cardId != null">card_id,</if>
            <if test="storyId != null">story_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="cardId != null">#{cardId},</if>
            <if test="storyId != null">#{storyId},</if>
         </trim>
    </insert>

    <update id="updateEboardCardStoryRelation" parameterType="EboardCardStoryRelation">
        update eboard_card_story_relation
        <trim prefix="SET" suffixOverrides=",">
            <if test="cardId != null">card_id = #{cardId},</if>
            <if test="storyId != null">story_id = #{storyId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteEboardCardStoryRelationById" parameterType="Long">
        delete from eboard_card_story_relation where id = #{id}
    </delete>

    <delete id="deleteEboardCardStoryRelationByIds" parameterType="String">
        delete from eboard_card_story_relation where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>